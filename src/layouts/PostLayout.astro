---
import type { Post } from "../scripts/types/Post";
import BaseLayout from "./BaseLayout.astro";

interface Props {
    post: Post;
}

const { post } = Astro.props;

const { src, alt } = post.heroImg;
---

<BaseLayout title={post.title}>
    <img src={src} alt={alt} loading="eager" width="100" />
    <article>
        <slot />
    </article>
</BaseLayout>