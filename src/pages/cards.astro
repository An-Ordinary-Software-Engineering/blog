---
import { getCollection } from "astro:content";
import PostCard from "../components/PostCard.astro";
import CardLayout from "../layouts/CardLayout.astro";
import type { Post } from "../scripts/types/Post.ts";

const metaData = await getCollection("posts");
---

<CardLayout>
    { metaData.map((post) => (
        <PostCard to={post.slug} post={post.data as Post} />
    )) }
</CardLayout>
