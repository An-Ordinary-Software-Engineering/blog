---
import PostCard from "../components/PostCard.astro";
import PostLayout from "../layouts/PostLayout.astro";
import type { Post } from "../scripts/types/Post.ts";

const metaData = await Astro.glob("../content/posts/*.mdx");
---

<PostLayout>
    { metaData.map((p) => (
        <PostCard post={p.frontmatter as Post} />
    )) }
</PostLayout>
