---
import { Image } from "astro:assets";
import Title from "./Title.astro";
import TopBar from "./TopBar.astro";
import { type Post } from "@scripts/types/Post.ts";

interface Props {
    post: Post;
    to: string
}

const { post, to } = Astro.props;
const { src, alt } = post.heroImg;
---

<article
    class="flex flex-col w-[23rem] h-[25rem] px-3 py-3 rounded-3xl shadow-post bg-g-aose"
>
    <TopBar difficulty={post.difficulty} />
    <Image
      class="w-96 h-40 my-3 object-cover rounded-t-xl"
      src={src}
      alt={alt}
      width="200"
      height="200"
      loading="eager"
    />
    <Title>
      <a href={`/posts/${to}/`} rel="next">{post.title}</a>
    </Title>
    <p class="h-fit text-lg">
      {post.description}
    </p>
</article>