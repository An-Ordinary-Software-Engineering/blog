---
import { Image } from "astro:assets";
import aoseImg from "@assets/aose_black.svg";
import NavBar from "./NavBar.astro";
import Menu from "./Menu.astro";
---

<header 
  class="flex h-20 border-b-b-aose border-b-4 justify-between items-center"
>
      <a
        class="ml-3 p-1 transition-all ease-linear hover:bg-w-aose hover:scale-110 rounded-lg " 
        href="/" 
        rel="previous"
      >
        <Image
          class="w-14"
          src={aoseImg}
          alt="aOSE logo"
          loading="eager"
        />
      </a>
      <Menu className="xs:visible sm:invisible" />
      <NavBar className="xs:hidden sm:inline" />
</header>