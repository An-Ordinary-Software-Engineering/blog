---
interface Props {
    link: string;
    rel: string;
    blankActive: boolean;
}

const { link, rel, blankActive } = Astro.props;
---

<a
    class="transition-colors ease-linear delay-100 py-1 px-6 hover:bg-[#f5f5f5] rounded-full text-b-aose text-lg font-bold"
    href={link}
    rel={rel}
    target={blankActive ? "_blank" : "_self"}
>
<slot />
</a>