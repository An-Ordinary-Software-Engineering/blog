---
import { Image } from "astro:assets";
import { type AboutInfo } from "../scripts/types/AboutInfo";
import Title from "./Title.astro";
import MediaList from "./MediaList.astro";
import StackList from "./StackList.astro";

interface Props {
    user: AboutInfo;
}

const { user } = Astro.props;
const { media, stacks } = user;
---

<article class="flex p-3 mt-8 bg-g-aose rounded-lg">
    <Image 
        class="w-52 max-h-52 mr-5 rounded-lg"
        src={user.avatarUrl}
        alt="Personal GitHub"
        width={100}
        height={100}
    />
    <div class="flex flex-col w-[100%]">
        <Title>{user.username}</Title>
        {media && <MediaList media={media} />}
        {stacks && <StackList stacks={stacks} />}
    </div>
</article>