{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@content/*": ["content/*"],
      "@icons/*": ["icons/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@scripts/*": ["scripts/*"],
      "@styles/*": ["styles/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "extends": "astro/tsconfigs/strict"
}
